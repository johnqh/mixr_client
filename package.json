{
  "name": "@sudobility/mixr_client",
  "version": "0.0.1",
  "description": "TypeScript client library for MIXR API",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "publishConfig": {
    "access": "restricted"
  },
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "check-all": "npm run lint && npm run typecheck && npm run test:run"
  },
  "keywords": [
    "mixr",
    "cocktail",
    "client",
    "typescript"
  ],
  "author": "John Huang",
  "license": "MIT",
  "peerDependencies": {
    "@sudobility/di": "^1.4.12",
    "@sudobility/types": "^1.9.4"
  },
  "devDependencies": {
    "@sudobility/di": "^1.4.14",
    "@sudobility/types": "^1.9.5",
    "@types/node": "^24.9.1",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitest/coverage-v8": "^4.0.4",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "vite": "^7.1.12",
    "vitest": "^4.0.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/johnqh/mixr_client.git"
  }
}
